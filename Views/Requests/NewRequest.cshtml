@{
    ViewData["Title"] = "طلب جديد";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-file-plus text-primary me-2"></i>
                تقديم طلب جديد
            </h1>
            <p class="text-muted mb-0">اختر التطبيق المناسب واملأ البيانات المطلوبة</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Requests")" class="btn btn-outline-secondary btn-modern">
                <i class="fas fa-arrow-right me-2"></i>
                العودة للطلبات
            </a>
        </div>
    </div>
</div>

<!-- Request Form -->
<div class="card-modern">
    <div class="card-header bg-transparent border-0">
        <h3 class="card-title mb-0">
            <i class="fas fa-clipboard-list text-info me-2"></i>
            بيانات الطلب
        </h3>
    </div>
    <div class="card-body">
        <form id="newRequestForm">
            <div class="row">
                <div class="col-md-8 mb-4">
                    <label for="ApplicationId" class="form-label required">
                        <i class="fas fa-layer-group text-primary me-2"></i>
                        اختر التطبيق
                    </label>
                    <select class="form-select form-select-lg" id="ApplicationId" name="ApplicationId" required>
                        <option value="">جاري تحميل التطبيقات...</option>
                    </select>
                    <div class="form-text">اختر التطبيق المناسب لطلبك من القائمة</div>
                </div>
                <div class="col-md-4 mb-4 d-flex align-items-end">
                    <button type="button" onclick="loadApplicationForm()" class="btn btn-primary-modern btn-modern w-100">
                        <i class="fas fa-arrow-down me-2"></i>
                        تحميل النموذج
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Application Form Container -->
<div id="applicationFormContainer" class="card-modern mt-4" style="display: none;">
    <div class="card-header bg-transparent border-0">
        <h3 class="card-title mb-0">
            <i class="fas fa-edit text-success me-2"></i>
            نموذج الطلب
        </h3>
    </div>
    <div class="card-body">
        <div id="dynamicFormContent">
            <!-- Dynamic form content will be loaded here -->
        </div>
    </div>
</div>

<!-- Help Section -->
<div class="card-modern mt-4">
    <div class="card-header bg-transparent border-0">
        <h3 class="card-title mb-0">
            <i class="fas fa-question-circle text-info me-2"></i>
            تعليمات مهمة
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="help-item">
                    <div class="help-icon bg-primary">
                        <i class="fas fa-search"></i>
                    </div>
                    <h6>اختيار التطبيق</h6>
                    <p class="text-muted">ابحث واختر التطبيق المناسب لطلبك من القائمة المنسدلة</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="help-item">
                    <div class="help-icon bg-success">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h6>ملء البيانات</h6>
                    <p class="text-muted">املأ جميع الحقول المطلوبة بدقة ووضوح</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="help-item">
                    <div class="help-icon bg-warning">
                        <i class="fas fa-paper-plane"></i>
                    </div>
                    <h6>إرسال الطلب</h6>
                    <p class="text-muted">راجع البيانات قبل الإرسال للتأكد من صحتها</p>
                </div>
                 </div>
        </div>
        </div>
    </div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay" style="display: none;">
    <div class="loading-content">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">جاري التحميل...</span>
        </div>
        <p class="mt-3">جاري تحميل النموذج...</p>
    </div>
</div>

<style>
    .form-label.required::after {
        content: " *";
        color: var(--danger-color);
    }

    .form-select-lg {
        border-radius: 12px;
        border: 2px solid rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        padding: 12px 16px;
    }

    .form-select-lg:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
    }

    .help-item {
        text-align: center;
        padding: 1rem;
    }

    .help-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        color: white;
        font-size: 20px;
    }

    .help-item h6 {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .help-item p {
        font-size: 0.9rem;
        margin-bottom: 0;
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loading-content {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: var(--shadow-xl);
    }

    .dynamic-form-field {
        margin-bottom: 1.5rem;
    }

    .dynamic-form-field label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    .dynamic-form-field input,
    .dynamic-form-field select,
    .dynamic-form-field textarea {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid rgba(0,0,0,0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .dynamic-form-field input:focus,
    .dynamic-form-field select:focus,
    .dynamic-form-field textarea:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
        outline: none;
    }

    .required-field::after {
        content: " *";
        color: var(--danger-color);
    }

    @@media (max-width: 768px) {
        .loading-content {
            margin: 1rem;
            padding: 1.5rem;
        }
    }
</style>
<script src="~/js/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Load applications on page load
        loadApplications();
        
        // Initialize Select2 for better UX
        $('#ApplicationId').select2({
            placeholder: "اختر التطبيق",
            allowClear: true,
            language: "ar"
        });
    });

    function loadApplications() {
        $.ajax({
            url: '@Url.Action("GetApplication", "Requests")',
            type: 'GET',
            success: function(data) {
                var select = $('#ApplicationId');
                select.empty();
                select.append('<option value="">اختر التطبيق</option>');
                
                $.each(data, function(index, department) {
                    var optgroup = $('<optgroup>').attr('label', department.label);
                    
                    $.each(department.options, function(i, app) {
                        optgroup.append('<option value="' + app.value + '">' + app.label + '</option>');
                    });
                    
                    select.append(optgroup);
                });
                
                select.trigger('change');
            },
            error: function() {
                Swal.fire({
                    title: 'خطأ!',
                    text: 'حدث خطأ أثناء تحميل التطبيقات',
                    icon: 'error',
                    confirmButtonText: 'حسناً'
                });
            }
        });
    }

    function loadApplicationForm() {
        var applicationId = $('#ApplicationId').val();
        
        if (!applicationId) {
            Swal.fire({
                title: 'تنبيه!',
                text: 'يرجى اختيار التطبيق أولاً',
                icon: 'warning',
                confirmButtonText: 'حسناً'
            });
            return;
        }

        // Show loading overlay
        $('#loadingOverlay').show();

        $.ajax({
            url: '@Url.Action("_LoadNewForm", "Requests")',
            type: 'GET',
            data: { ApplicationId: applicationId },
            success: function(data) {
                $('#dynamicFormContent').html(data);
                $('#applicationFormContainer').show();
                
                // Scroll to form
                $('html, body').animate({
                    scrollTop: $('#applicationFormContainer').offset().top - 100
                }, 500);
            },
            error: function() {
                Swal.fire({
                    title: 'خطأ!',
                    text: 'حدث خطأ أثناء تحميل النموذج',
                    icon: 'error',
                    confirmButtonText: 'حسناً'
                });
            },
            complete: function() {
                // Hide loading overlay
                $('#loadingOverlay').hide();
            }
        });
    }

    function submitRequest() {
        var formData = new FormData();
        var applicationId = $('#ApplicationId').val();
        
        // Collect form data
        $('#dynamicFormContent input, #dynamicFormContent select, #dynamicFormContent textarea').each(function() {
            if ($(this).attr('type') === 'file') {
                // Handle file uploads
                var files = this.files;
                for (var i = 0; i < files.length; i++) {
                    formData.append('files', files[i]);
                }
            } else {
                formData.append($(this).attr('name'), $(this).val());
            }
        });
        
        formData.append('ApplicationId', applicationId);
        
        // Show loading
        Swal.fire({
            title: 'جاري الإرسال...',
            text: 'يرجى الانتظار',
            allowOutsideClick: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        $.ajax({
            url: '@Url.Action("RequestPOst", "Requests")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                Swal.fire({
                    title: 'تم بنجاح!',
                    text: 'تم إرسال طلبك بنجاح',
                    icon: 'success',
                    confirmButtonText: 'حسناً'
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Requests")';
                });
            },
            error: function() {
                Swal.fire({
                    title: 'خطأ!',
                    text: 'حدث خطأ أثناء إرسال الطلب',
                    icon: 'error',
                    confirmButtonText: 'حسناً'
                });
            }
        });
    }
</script>

@Html.Partial("_Request")