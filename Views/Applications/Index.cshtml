@model IEnumerable<WorkFlow.Models.Application>

@{
    ViewData["Title"] = "قائمة التطبيقات";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-layer-group text-primary me-2"></i>
                قائمة التطبيقات
            </h1>
            <p class="text-muted mb-0">إدارة جميع التطبيقات والخدمات في النظام</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "Applications")" class="btn btn-primary-modern btn-modern">
                <i class="fas fa-plus me-2"></i>
                إضافة تطبيق جديد
            </a>
        </div>
    </div>
</div>

<!-- Applications Grid -->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card-modern application-card">
                <div class="card-header bg-transparent border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="application-icon">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <div class="application-status">
                            @if (item.ApplicationInUse)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-play me-1"></i>
                                    نشط
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-pause me-1"></i>
                                    متوقف
                                </span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.ApplicationNameAr</h5>
                    <p class="card-text text-muted">@item.ApplicationNameEng</p>
                    
                    <div class="application-info">
                        <div class="info-item">
                            <i class="fas fa-building text-primary me-2"></i>
                            <span>@item.Department?.DepartmentNameEng</span>
                        </div>
                        @if (item.Section != null)
                        {
                            <div class="info-item">
                                <i class="fas fa-layer-group text-info me-2"></i>
                                <span>@item.Section.SectionNameEng</span>
                            </div>
                        }
                        <div class="info-item">
                            <i class="fas fa-calendar text-warning me-2"></i>
                            <span>@item.CrDate.ToString("yyyy/MM/dd")</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Edit", "Applications", new { id = item.ApplicationId })" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-edit me-1"></i>
                            تعديل
                        </a>
                        <button class="btn btn-outline-@(item.ApplicationInUse ? "danger" : "success") btn-sm" 
                                onclick="Change_ApplicationStatus(@item.ApplicationId)">
                            <i class="fas fa-@(item.ApplicationInUse ? "stop" : "play") me-1"></i>
                            @(item.ApplicationInUse ? "إيقاف" : "تشغيل")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state text-center py-5">
        <div class="empty-state-icon mb-4">
            <i class="fas fa-layer-group"></i>
        </div>
        <h3 class="empty-state-title">لا توجد تطبيقات</h3>
        <p class="empty-state-text text-muted">لم يتم إنشاء أي تطبيقات بعد. ابدأ بإنشاء تطبيقك الأول.</p>
        <a href="@Url.Action("Create", "Applications")" class="btn btn-primary-modern btn-modern">
            <i class="fas fa-plus me-2"></i>
            إنشاء تطبيق جديد
        </a>
    </div>
}

<!-- Applications Table (Alternative View) -->
<div class="card-modern mt-5">
    <div class="card-header bg-transparent border-0">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-table text-primary me-2"></i>
                عرض جدولي
            </h3>
            <div class="view-toggle">
                <button class="btn btn-outline-primary btn-sm" onclick="toggleView()">
                    <i class="fas fa-th me-1"></i>
                    عرض البطاقات
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-modern" id="applicationsTable">
                <thead>
                    <tr>
                        <th>اسم التطبيق (عربي)</th>
                        <th>اسم التطبيق (إنجليزي)</th>
                        <th>الحالة</th>
                        <th>القسم</th>
                        <th>تاريخ الإنشاء</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="application-icon-sm me-3">
                                        <i class="fas fa-cogs"></i>
                                    </div>
                                    <span class="fw-semibold">@item.ApplicationNameAr</span>
                                </div>
                            </td>
                            <td>@item.ApplicationNameEng</td>
                            <td>
                                @if (item.ApplicationInUse)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-play me-1"></i>
                                        نشط
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-pause me-1"></i>
                                        متوقف
                                    </span>
                                }
                            </td>
                            <td>@item.Department?.DepartmentNameEng</td>
                            <td>@item.CrDate.ToString("yyyy/MM/dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", "Applications", new { id = item.ApplicationId })" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-outline-@(item.ApplicationInUse ? "danger" : "success") btn-sm" 
                                            onclick="Change_ApplicationStatus(@item.ApplicationId)">
                                        <i class="fas fa-@(item.ApplicationInUse ? "stop" : "play")"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .page-header {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: var(--shadow-md);
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .application-card {
        height: 100%;
        transition: all 0.3s ease;
    }

    .application-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
    }

    .application-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: var(--gradient-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
    }

    .application-icon-sm {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        background: var(--gradient-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
    }

    .application-info {
        margin-top: 1rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .empty-state {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 4rem 2rem;
        box-shadow: var(--shadow-md);
    }

    .empty-state-icon {
        font-size: 4rem;
        color: var(--secondary-color);
        opacity: 0.5;
    }

    .empty-state-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .empty-state-text {
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }
        
        .page-title {
            font-size: 1.5rem;
        }
        
        .application-card {
            margin-bottom: 1rem;
        }
    }
</style>

<script>
    function Change_ApplicationStatus(Application_Id) {
        Swal.fire({
            title: 'تأكيد العملية',
            text: 'هل أنت متأكد من تغيير حالة التطبيق؟',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'نعم، تأكيد',
            cancelButtonText: 'إلغاء',
            confirmButtonColor: '#2563eb',
            cancelButtonColor: '#6c757d'
        }).then((result) => {
            if (result.isConfirmed) {
                var url = "@Url.Action("change_Application_status", "Applications")";
                var request = $.getJSON(url + '/' + Application_Id);
                request.done(function (Data) {
                    Swal.fire({
                        title: 'تم بنجاح!',
                        text: 'تم تغيير حالة التطبيق بنجاح',
                        icon: 'success',
                        confirmButtonText: 'حسناً'
                    }).then(() => {
                        location.reload();
                    });
                });
                request.fail(function () {
                    Swal.fire({
                        title: 'خطأ!',
                        text: 'حدث خطأ أثناء تغيير حالة التطبيق',
                        icon: 'error',
                        confirmButtonText: 'حسناً'
                    });
                });
            }
        });
    }

    function toggleView() {
        // Toggle between card and table view
        $('.row').toggle();
        $('.card-modern.mt-5').toggle();
    }

    $(document).ready(function() {
        // Initialize DataTable
        $('#applicationsTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json"
            },
            "responsive": true,
            "pageLength": 10,
            "order": [[4, "desc"]]
        });
    });
</script>