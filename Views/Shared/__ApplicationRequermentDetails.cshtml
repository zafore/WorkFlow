        try {
            StartLoader();

            var Url = '@Url.Action("Create", "Application_Requirement_Details")';
            var DataReslt = $.get(Url, { Application_Requirement_Id });
            DataReslt.done(function (data) {

                ShowHide(DivHide, DivShow);
