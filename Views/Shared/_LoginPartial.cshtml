@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims

@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user me-1"></i>
                @User.FindFirst("FullName")?.Value ?? User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                        <i class="fas fa-user-circle me-2"></i>
                        الملف الشخصي
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Test", "Home")">
                        <i class="fas fa-info-circle me-2"></i>
                        معلومات المستخدم
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" action="@Url.Action("Logout", "Account")" class="d-inline">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            تسجيل الخروج
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account")">
                <i class="fas fa-sign-in-alt me-1"></i>
                تسجيل الدخول
            </a>
        </li>
    </ul>
}