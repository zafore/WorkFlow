    function GetEmpByDep() {

        var url = '@Url.Action("SearchJson","Emp")';

        var Depdata = $.getJSON(url);


        Depdata.done(function (data) {
            var html = '   <option value="0">--Select Emp--</option>';



            $.each(data, function (i, Depv) {
                html +=
                     '  <option value=" ' + Depv.EMPID + '"> ' + Depv.FIRSTNAME + '  </option>'
            });

    


            $('#Assigned_To_Emp_Id').empty();
            $('#Assigned_To_Emp_Id').append(html);
        }

    );



    }
    function GetDesplayLinkData() {

        var url = '@Url.Action("DisplayLink", "Application_Requirement")';

        var Depdata = $.getJSON(url);


        Depdata.done(function (data) {
            var html = '   <option value="0">--Select--</option>';



            $.each(data, function (i, Depv) {
                html +=
                     '  <option value=" ' + Depv.DisplaylinkId + '"> ' + Depv.DisplaylinkName + '  </option>'
            });




            $('#DisplaylinkId').empty();
            $('#DisplaylinkId').append(html);
        }

    );



