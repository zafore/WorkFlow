<script>

   
    function LevelRequerment(Application_Level_Id)
    {

        try {
            StartLoader();

            var Url = '@Url.Action("Create", "Application_Requirement")';
            var DataReslt = $.get(Url, { Application_Level_Id });
            DataReslt.done(function (data) {
                ShowHide('DivmainApp', 'DivLevelDetails');
                $("#DivLevelDetails").empty();
                $("#DivLevelDetails").append(data);
                EndLoader();
            });

        }
        catch (ex) {
            EndLoader();
            alert(ex);

        }
    }
